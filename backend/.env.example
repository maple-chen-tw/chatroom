# APP settings
APP_ENV=example  # 使用 'development' 或 'production'
HOST=0.0.0.0
PORT=8000

# CORS origins (for frontend connection)
ALLOWED_ORIGINS=http://localhost:5173

# JWT & Security
SECRET_KEY=your-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120

# MySQL Database (AWS RDS or local)
DB_CONNECTION_STRING=mysql://user:password@your-db-endpoint.amazonaws.com/your-db-name

# AWS S3 (for storing uploaded files)
# Use dummy values in development
AWS_ACCESS_KEY_ID=dummy-access-key
AWS_SECRET_ACCESS_KEY=dummy-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=dev-dummy-bucket